{
  "compilerOptions": {
    "target": "ES2020",                              // Versão do JavaScript que será emitida
    "module": "commonjs",                            // Sistema de módulos a ser usado
    "strict": true,                                  // Habilita todas as verificações de tipo rigorosas
    "esModuleInterop": true,                         // Permite importações de módulos CommonJS
    "skipLibCheck": true,                           // Ignora a verificação de tipo em arquivos .d.ts
    "forceConsistentCasingInFileNames": true,      // Garante consistência em nomes de arquivos
    "types": ["jest", "node"],                      // Inclui definições de tipo do Jest e do Node
    "baseUrl": "./",                                // Define a base para resolver módulos
    "paths": {                                       // Mapeia caminhos para resolver módulos
      "*": ["node_modules/*"]
    },
    "outDir": "./dist",                             // Diretório de saída para arquivos compilados
    "sourceMap": true,                              // Gera arquivos de mapa de origem
    "declaration": true,                            // Gera arquivos .d.ts
    "skipDefaultLibCheck": true                     // Ignora a verificação de tipo em arquivos de biblioteca padrão
  },
  "include": [
    "src/**/*.ts",                                  // Inclui todos os arquivos TypeScript em src
    "src/**/*.spec.ts"                              // Inclui arquivos de teste
  ],
  "exclude": [
    "node_modules",                                 // Exclui a pasta node_modules
    "dist"                                          // Exclui a pasta de saída
  ]
}
